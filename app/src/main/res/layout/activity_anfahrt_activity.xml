<RelativeLayout
   android:id="@+id/main_layout"
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".AnfahrtActivity">

   <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:background="@color/primary"
      android:elevation="6dp"
      app:titleTextColor="@color/text_primary"
      android:minHeight="?attr/actionBarSize"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/toolbar"
      android:weightSum="3"
      android:orientation="vertical">
      <android.support.v7.widget.CardView
         android:layout_weight="1"
         android:id="@+id/demokratie_container"
         android:layout_marginTop="@dimen/activity_vertical_margin"
         android:layout_marginLeft="@dimen/activity_horizontal_margin"
         android:layout_marginRight="@dimen/activity_horizontal_margin"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:cardElevation="4dp"
         app:cardCornerRadius="0dp">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/padding_small"
               android:background="@color/white"
               android:orientation="horizontal">
               <TextView
                  android:text="@string/name_festival_1"
                  android:textColor="@color/text_dark_primary"
                  android:textAppearance="@style/Festival.Text.RobotoLight"
                  android:textSize="20sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
               <TextView
                  android:text="@string/date_festival_1"
                  android:textColor="@color/text_dark_secondary"
                  android:textAppearance="@style/Festival.Text.RobotoLight"
                  android:textSize="16sp"
                  android:gravity="end"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
            </LinearLayout>
            <fragment
               android:id="@+id/map_festival1"
               android:name="com.google.android.gms.maps.SupportMapFragment"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
         </LinearLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
         android:id="@+id/macht_container"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_marginTop="@dimen/activity_vertical_margin"
         android:layout_marginLeft="@dimen/activity_horizontal_margin"
         android:layout_marginRight="@dimen/activity_horizontal_margin"
         android:layout_height="0dp"
         app:cardElevation="4dp"
         app:cardCornerRadius="0dp">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/padding_small"
               android:background="@color/white"
               android:orientation="horizontal">
               <TextView
                  android:text="@string/name_festival_2"
                  android:textColor="@color/text_dark_primary"
                  android:textAppearance="@style/Festival.Text.RobotoLight"
                  android:textSize="20sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
               <TextView
                  android:text="@string/date_festival_2"
                  android:textColor="@color/text_dark_secondary"
                  android:textAppearance="@style/Festival.Text.RobotoLight"
                  android:textSize="16sp"
                  android:gravity="end"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
            </LinearLayout>
            <fragment
               android:id="@+id/map_festival2"
               android:name="com.google.android.gms.maps.SupportMapFragment"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
         </LinearLayout>
      </android.support.v7.widget.CardView>
      <android.support.v7.widget.CardView
         android:id="@+id/partizipation_container"
         android:layout_weight="1"
         android:layout_marginTop="@dimen/activity_vertical_margin"
         android:layout_marginBottom="@dimen/activity_vertical_margin"
         android:layout_marginLeft="@dimen/activity_horizontal_margin"
         android:layout_marginRight="@dimen/activity_horizontal_margin"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:cardElevation="4dp"
         app:cardCornerRadius="0dp">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="@dimen/padding_small"
               android:background="@color/white"
               android:orientation="horizontal">
               <TextView
                  android:text="@string/name_festival_3"
                  android:textColor="@color/text_dark_primary"
                  android:textAppearance="@style/Festival.Text.RobotoLight"
                  android:textSize="20sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
               <TextView
                  android:text="@string/date_festival_3"
                  android:textColor="@color/text_dark_secondary"
                  android:textAppearance="@style/Festival.Text.RobotoLight"
                  android:textSize="16sp"
                  android:gravity="end"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" />
            </LinearLayout>
            <fragment
               android:id="@+id/map_festival3"
               android:name="com.google.android.gms.maps.SupportMapFragment"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />
         </LinearLayout>
      </android.support.v7.widget.CardView>
   </LinearLayout>
</RelativeLayout>
