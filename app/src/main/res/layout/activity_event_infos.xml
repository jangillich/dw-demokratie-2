<RelativeLayout
   android:id="@+id/main_layout"
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   tools:context=".EventInfosActivity">

   <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:background="@color/primary"
      app:titleTextColor="@color/text_primary"
      android:minHeight="?attr/actionBarSize"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

   <ScrollView
      android:id="@+id/event_infos_content"
      android:layout_below="@id/toolbar"
      android:layout_height="match_parent"
      android:layout_width="match_parent">
      <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <FrameLayout
            android:id="@+id/fragment_youtube_player"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <android.support.v7.widget.CardView
            android:id="@+id/festival_text_container"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="0dp">
            <TextView
               android:id="@+id/festival_text"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="30dp"
               android:layout_marginLeft="@dimen/text_margin"
               android:layout_marginRight="@dimen/text_margin"
               android:layout_marginTop="@dimen/text_margin" />
            <ImageView
               android:id="@+id/icon_collapse_expand"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:src="@drawable/ic_expand_more"
               android:scaleType="fitCenter"
               android:layout_gravity="bottom"/>
         </android.support.v7.widget.CardView>
      </LinearLayout>

   </ScrollView>
   <View
      android:id="@+id/shadow_toolbar"
      android:layout_width="match_parent"
      android:layout_height="6dp"
      android:alpha="0.5"
      android:background="@drawable/shadow_toolbar"
      android:layout_below="@id/toolbar"/>

</RelativeLayout>